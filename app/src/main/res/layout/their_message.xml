<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="15dp"
    android:paddingEnd="60dp"
    android:clipToPadding="false">

    <View
        android:id="@+id/v_avatar"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:background="@drawable/bg_circle"
        android:layout_width="34dp"
        android:layout_height="34dp" />

    <TextView
        android:id="@+id/tv_their_name"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/v_avatar"
        android:layout_alignTop="@+id/v_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:text="@string/place_holder_friends_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_message_body"
        android:layout_below="@+id/tv_their_name"
        android:layout_alignStart="@+id/tv_their_name"
        android:background="@drawable/bg_their_message"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="2dp"
        android:textSize="18sp"
        android:text="@string/place_holder_their_message"
        />
</RelativeLayout>